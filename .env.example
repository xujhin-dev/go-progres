# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=postgres

# Redis 配置
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT 配置
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-characters-long
JWT_EXPIRE=24

# 应用配置
GIN_MODE=release
SERVER_PORT=8080

# 监控配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# GitHub 配置 (用于 CI/CD)
GITHUB_REPOSITORY=your-org/go-progres

# OSS 配置 (可选)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET_NAME=your_bucket_name

# 推送服务配置 (可选)
PUSH_ACCESS_KEY_ID=your_push_access_key_id
PUSH_ACCESS_KEY_SECRET=your_push_access_key_secret
PUSH_APP_KEY=12345678
PUSH_REGION_ID=cn-hangzhou

# 支付宝配置 (可选)
ALIPAY_APP_ID=your_app_id
ALIPAY_PRIVATE_KEY_PATH=path/to/private_key.pem
ALIPAY_PUBLIC_KEY_PATH=path/to/alipay_public_key.pem
ALIPAY_NOTIFY_URL=https://yourdomain.com/payment/notify/alipay
ALIPAY_RETURN_URL=https://yourdomain.com/payment/return
ALIPAY_IS_PRODUCTION=false

# 微信支付配置 (可选)
WECHAT_APP_ID=your_app_id
WECHAT_MCH_ID=your_mch_id
WECHAT_MCH_CERT_SERIAL=your_cert_serial
WECHAT_MCH_PRIVATE_KEY_PATH=path/to/apiclient_key.pem
WECHAT_APIV3_KEY=your_apiv3_key
WECHAT_NOTIFY_URL=https://yourdomain.com/payment/notify/wechat

# 通知配置 (可选)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
